{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest file",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/attendee/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
                "--runInBand",
                "--watch",
                "--coverage=false",
                "--no-cache"
            ],
            "cwd": "${workspaceRoot}/attendee",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "windows": {
                "program": "${workspaceFolder}/attendee/node_modules/jest/bin/jest"
            }
        },
    ]
}