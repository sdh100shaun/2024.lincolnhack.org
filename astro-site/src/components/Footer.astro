---
import slack from "/src/images/slack-color.svg";
import twitter from "/src/images/x-social-media-white-icon.svg";
import mastodon from "/src/images/mastodon-white-icon.svg";
import email from "/src/images/email-icon.svg";
---

<footer class="bg-purple-700 text-white">
  <div class="max-w-screen-lg mx-auto px-4 py-5 space-y-8 md:space-y-4">
    <!-- Increased space between rows -->
    <div class="flex flex-wrap items-center gap-4 text-left justify-between">
      <!-- Ensured text alignment is left -->

      <div class="flex items-center justify-start gap-4">
        <a
          href="https://www.digitallincoln.co.uk/join"
          class="hover:underline flex items-center"
        >
          <img
            src={slack.src}
            alt="slack - talk with us on Digital Lincoln slack"
            class="h-auto w-8 inline-block ml-2"
          />
        </a>
        <a
          href="https://twitter.com/LincsHack"
          class="hover:underline flex items-center"
        >
          <img
            src={twitter.src}
            alt="x - follow us on X formerly Twitter"
            class="h-auto w-8 inline-block ml-2"
          />
        </a>
        <!-- Mastodon Link -->
        <a
          href="https://mastodon.social/@lincolnhack"
          class="hover:underline flex items-center"
        >
          <img
            src={mastodon.src}
            alt="Mastodon - follow us on Mastodon"
            class="h-auto w-8 inline-block ml-2"
          />
        </a>
        <a href="mailto:hello@lincolnhack.org" class="hover:underline">
          <img
            src={email.src}
            alt="Email LincolnHack"
            class="h-auto w-8 inline-block ml-2"
          />
        </a>
      </div>

      <div class="flex flex-wrap items-center justify-start gap-4">
        <a href="/conduct/index.html" class="hover:underline">Code of Conduct</a
        >
        <a href="/venue/index.html" class="hover:underline"> Venue Info </a>
      </div>
    </div>
    <div class="text-sm text-left">
      <!-- Ensured text alignment is left -->
      <a href="https://www.digitallincoln.co.uk" class="hover:underline">&copy; copyright Digital Lincoln 2024</a>. All Rights Reserved.
    </div>
  </div>
</footer>
