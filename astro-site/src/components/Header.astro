<!-- Burger icon and main navigation unchanged -->
<header class="uppercase lincolnHack-purple text-white p-4">
    <div class="container mx-auto px-4 flex justify-between items-center">
        <a href="/" class="shareTechFont text-lg font-bold">LincolnHack 2024</a>
        <button id="burger" aria-label="Toggle menu" class="block lg:hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
        </button>
        <nav id="nav-menu" class="flex">
            <button id="close-menu" aria-label="Close menu" class="close-menu-button">
                <svg class="w-6 h-6" fill="none" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
            <ul class="flex flex-col md:flex-row list-none lg:space-x-4">
                <li><a href="/" class="nav-link hover:text-purple-300">Home</a></li>
                <li><a href="/challenge/index.html" class="nav-link hover:text-purple-300">Challenges</a></li>
                <li><a href="/agenda/index.html" class="nav-link hover:text-purple-300">Agenda</a></li>
                <li><a href="/menu/index.html" class="nav-link hover:text-purple-300">Menu</a></li>
                <li><a href="/faq/index.html" class="nav-link hover:text-purple-300">FAQ</a></li>
            </ul>
        </nav>
    </div>
</header>

<div id="countdown">
    <div class="button-dark-purple text-white font-bold py-2 px-4 text-center">&nbsp; </div>
</div>


<style>

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .nav-link:hover {
            color: #818CF8; /* Lighter purple for hover effect */
        }

        #close-menu,
        #nav-menu {
            display: none;
        }


        @media (max-width: 768px) {
            #close-menu,
            #burger {
                display: block;
            }

            #nav-menu {
                visibility: hidden;
                display: flex;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100vh;
                background: rgba(0, 0, 0, 0.9);
                flex-direction: column;
                justify-content: center;
                align-items: center;
                transition: transform 0.3s ease-in-out;
                transform: translateX(-100%);
                z-index: 20;
            }

            #nav-menu.active {
                visibility: visible;
                transform: translateX(0);
            }

            #nav-menu ul {
                list-style-type: none;
                padding: 0;
            }

            #nav-menu ul li {
                margin: 20px 0;
            }

            #nav-menu ul li a {
                color: white;
                font-size: 24px;
                text-decoration: none;
            }

            .close-menu-button {
                position: absolute;
                top: 1rem;
                right: 1rem;
                background: transparent;
                border: none;
                cursor: pointer;
            }

            .close-menu-button svg {
                fill: white; /* Ensure the icon is visible against the menu background */
            }
        }

        @media (min-width: 769px) {
            #nav-menu {
                display: flex;
            }

            #nav-menu ul {
                display: flex;
                list-style-type: none;
                padding: 0;
            }

            #nav-menu ul li {
                margin: 0 10px;
            }

            #nav-menu ul li a {
                color: white;
                text-decoration: none;
                font-size: 16px;
            }

            #burger {
                display: none;
            }

        }



        
</style>


<script>
    document.getElementById('burger').addEventListener('click', function() {
        document.getElementById('nav-menu').classList.toggle('active');
    });

    document.getElementById('close-menu').addEventListener('click', function() {
        document.getElementById('nav-menu').classList.remove('active');
    });
</script>