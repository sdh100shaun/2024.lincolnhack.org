</header>

<div id="countdown">
    <div class="button-dark-purple text-white font-bold py-2 px-4 text-center">
        
    </div>
</div>


<style>

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .nav-link:hover {
            color: #818CF8; /* Lighter purple for hover effect */
        }

        #nav-menu {
            display: none;
        }


        @media (max-width: 768px) {
            #burger {
                display: block;
            }

            #nav-menu {
                visibility: hidden;
                display: flex;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100vh;
                background: rgba(0, 0, 0, 0.9);
                flex-direction: column;
                justify-content: center;
                align-items: center;
                transition: transform 0.3s ease-in-out;
                transform: translateX(-100%);
                z-index: 20;
            }

            #nav-menu.active {
                visibility: visible;
                transform: translateX(0);
            }

            #nav-menu ul {
                list-style-type: none;
                padding: 0;
            }

            #nav-menu ul li {
                margin: 20px 0;
            }

            #nav-menu ul li a {
                color: white;
                font-size: 24px;
                text-decoration: none;
            }
        }

        @media (min-width: 769px) {
            #nav-menu {
                display: flex;
            }

            #nav-menu ul {
                display: flex;
                list-style-type: none;
                padding: 0;
            }

            #nav-menu ul li {
                margin: 0 10px;
            }

            #nav-menu ul li a {
                color: white;
                text-decoration: none;
                font-size: 16px;
            }

            #burger {
                display: none;
            }

        }

        
</style>


<script>
    document.getElementById('burger').addEventListener('click', function() {
        document.getElementById('nav-menu').classList.toggle('active');
    });

     let interval = null;  
    
function updateCountdown(visible = true) {
    const eventDate = new Date("February, 26 2024 12:30:00").getTime();
    const now = new Date().getTime();
    const difference = eventDate - now;
    const days = Math.floor(difference / (1000 * 60 * 60 * 24));
    const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((difference % (1000 * 60)) / 1000);
 

    if(visible){
        document.getElementById("days").innerText = days;
        document.getElementById("hours").innerText = hours;
        document.getElementById("minutes").innerText = minutes;
        document.getElementById("seconds").innerText = seconds;
        document.getElementById("countdown").style.display = "block";
    }


if (parseInt(seconds) < 0) {
         document.getElementById("countdown").innerHTML = '<div class="button-dark-purple text-white font-bold py-2 px-4 text-center">Registration Now Open!</div>';
         if(interval !== null){
                clearInterval(interval);
         }
         
    }
}

document.getElementById("countdown").style.display = "none";
updateCountdown(false);
// Update the countdown every 1 second
interval = setInterval(updateCountdown(false), 1000);

</script>